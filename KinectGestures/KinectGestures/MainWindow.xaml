<Window x:Class="KinectGestures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:LightBuzz.Vitruvius.Controls;assembly=LightBuzz.Vitruvius"
        xmlns:local="clr-namespace:KinectGestures"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.Row="0">
            <TextBlock x:Name="tblGestures" Text="-" Grid.Column="1" 
                       IsHitTestVisible="false" TextWrapping="NoWrap" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0" FontSize="72" />
        </Grid>

        <Grid Grid.Row="1">
            <controls:KinectViewer x:Name="viewer" />
        </Grid>
    </Grid>
</Window>
